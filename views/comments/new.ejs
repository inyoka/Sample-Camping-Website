<% include ../partials/header %>

<section class="flex-new-camp">
  <form class="btn-toolbar" action="/campgrounds/<%=campground._id%>/comments" method="POST">
    <h1 class="text-center w-100">Add new comment to <%= campground.name %></h1>
    <input class="form-control my-2 mt-4" type="text" name='text' placeholder="text">
    <input class="form-control my-2" type="text" name='author' placeholder="author">
    <button class="btn btn-lg btn-primary btn-block my-2">Submit</button>
    <a href="/campgrounds">Go Back</a>
  </form>
</section>


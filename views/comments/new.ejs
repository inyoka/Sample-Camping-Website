    <!-- <input class="form-control my-2 mt-4" type="text" name='text' placeholder="text"> -->
    <div class="form-group col-12">
     <label for="exampleTextarea">Enter comment <%= username %></label>
     <textarea class="form-control"  type="text" name='text' id="exampleTextarea" rows="3" columns="500"></textarea>
   </div>

    <!-- <input class="form-control my-2" type="text" name='author' placeholder="author"> -->
